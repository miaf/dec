<section>
	<header>
		<h1>Join us</h1>
	</header>
	<div>
		<%= form_for @user, html: {multipart: true} do |f| %>
		<% if @user.errors.any? %>
				<div id="error_explanation">
					<h2><%= pluralize(@user.errors.count, "error") %>
					prohibited this user from being saved:</h2>
					<ul>
						<% @user.errors.full_messages.each do |msg| %>
							<li><%= msg %></li>
						<% end %>
					</ul>
				</div>
			<% end %>
			<p>
				<%= f.label :first_name %> <br/>
				<%= f.text_field :first_name %>
				<%= show_field_error(@user, :first_name) %>
			</p>
			<p>
				<%= f.label :last_name %> <br/>
				<%= f.text_field :last_name %>
				<%= show_field_error(@user, :last_name) %>
			</p>
			<p>
				<%= f.label :date_of_birth %> <br/>
				<%= f.date_field :date_of_birth %>
				<%= show_field_error(@user, :date_of_birth) %>
			</p>
			<p>
				<%= f.label :gender  %> <br/>
				<select name="user[gender]", id="user_gender">
				  <option>M</option>
				  <option>F</option>
				</select>
			</p>
			<p>
				<%= f.label :nationality %> <br/>
				<%= f.text_field :nationality %>
				<%= show_field_error(@user, :nationality) %>
			</p>
			<p>
				<%= f.label :country %> <br/>
				<%= f.country_code_select(:country) %>
			</p>
			<p>
				<%= f.label :email %> <br/>
				<%= f.text_field :email %>
				<%= show_field_error(@user, :email) %>
			</p>
			<p>
				<%= f.label :login_name %> <br/>
				<%= f.text_field :login_name %>
				<%= show_field_error(@user, :login_name) %>
			</p>
			<p>
				<%= f.label :password %> <br/>
				<%= f.password_field :password %>
				<%= show_field_error(@user, :password) %>
			</p>
			<p>
				<%= f.label :password_confirmation %> <br/>
				<%= f.password_field :password_confirmation %>
				<%= show_field_error(@user, :password_confirmation) %>
			</p>
			<p>
				<%= f.label :phone %> <br/>
				<%= f.text_field :phone %>
				<%= show_field_error(@user, :phone) %>
			</p>
			<p>
				<%= f.label :address %> <br/>
				<%= f.text_field :address %>
				<%= show_field_error(@user, :address) %>
			</p>
			<p>
				<%= f.label :description %> <br/>
				<%= f.text_area :description %>
				<%= show_field_error(@user, :description) %>
			</p>
			<p>
		    <%= f.submit I18n.t('buttons.create') %>&nbsp;&nbsp;&nbsp;
		    <%= f.submit I18n.t('buttons.reset'), :type => 'reset' %>
		  </p>

		<% end %>
	</div>
</section>